{
  "$schema": "http://json-schema.org/schema",
  "$id": "ComponentWithSharedSchema",
  "title": "Component With SharedModule",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the component"
    },
    "path": {
      "type": "string",
      "description": "The path to create the component",
      "default": "src/app"
    },
    "module": {
      "type": "string",
      "description": "The module file to import SharedModule into"
    }
  },
  "required": [
    "name",
    "module"
  ]
}