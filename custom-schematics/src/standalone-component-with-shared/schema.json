{
  "$schema": "http://json-schema.org/schema",
  "id": "standaloneComponent",
  "title": "Standalone Component with SharedModule",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the component"
    },
    "path": {
      "type": "string",
      "default": "src/app/shared/ui",
      "description": "Where to create the component"
    }
  },
  "required": ["name"]
}
